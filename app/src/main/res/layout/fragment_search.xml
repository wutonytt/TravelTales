    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Other layout elements can go here -->

    <!-- Add a SearchView with vertical constraints -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:queryHint="Search..."
        app:iconifiedByDefault="false" />

        <TextView
            android:id="@+id/trendingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trending..."
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@id/searchView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/picturesGrid"
            android:layout_marginTop="25dp" />


        <GridLayout
            android:id="@+id/picturesGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchView"
            android:layout_marginTop="40dp"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/trendingText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/picture1"
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:src="@drawable/amsterdam6"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/picture2"
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:src="@drawable/amsterdam5"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/picture3"
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:src="@drawable/amsterdam4"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/picture4"
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:src="@drawable/amsterdam3"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/picture5"
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:src="@drawable/amsterdam2"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/picture6"
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:src="@drawable/amsterdam1"
                android:scaleType="centerCrop"/>
        </GridLayout>
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>